{
  "openapi": "3.0.0",
  "info": {
    "title": "Holmatro Blob Storage API (Azurite)",
    "version": "1.0.0"
  },
  "paths": {
    "/{account}/{container}/{blob}": {
      "get": {
        "summary": "Retrieve a blob",
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "devstoreaccount1"
          },
          {
            "name": "container",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "lnce-plm-tst"
          },
          {
            "name": "blob",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "PRE000625_items_20250905_XYZ_matching_BOD.txt"
          },
          {
            "name": "x-ms-date",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Mon, 29 Sep 2025 12:48:28 GMT"
          },
          {
            "name": "x-ms-version",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "2020-10-02"
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "SharedKey devstoreaccount1:..."
          }
        ],
        "responses": {
          "200": {
            "description": "Blob retrieved successfully",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "Blob not found"
          }
        }
      },
      "put": {
        "summary": "Upload or overwrite a blob",
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "devstoreaccount1"
          },
          {
            "name": "container",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "lnce-plm-tst"
          },
          {
            "name": "blob",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "acknowledge/test.xml"
          },
          {
            "name": "x-ms-date",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Mon, 29 Sep 2025 12:48:28 GMT"
          },
          {
            "name": "x-ms-version",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "2020-10-02"
          },
          {
            "name": "x-ms-blob-type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "BlockBlob"
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "SharedKey devstoreaccount1:..."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/xml": {
              "schema": {
                "type": "string"
              },
              "example": "<root><sample>xml content</sample></root>"
            }
          }
        },
        "responses": {
          "201": {
            "description": "Blob created or overwritten"
          }
        }
      },
      "delete": {
        "summary": "Delete a blob",
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "devstoreaccount1"
          },
          {
            "name": "container",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "lnce-plm-tst"
          },
          {
            "name": "blob",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "PRE000625_items_20250905_XYZ_matching_BOD.txt"
          },
          {
            "name": "x-ms-date",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Mon, 29 Sep 2025 12:48:28 GMT"
          },
          {
            "name": "x-ms-version",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "2020-10-02"
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "SharedKey devstoreaccount1:..."
          }
        ],
        "responses": {
          "202": {
            "description": "Blob deletion accepted"
          },
          "404": {
            "description": "Blob not found"
          }
        }
      }
    },
    "/{account}/{container}/{blob}/copy": {
      "put": {
        "summary": "Copy a blob",
        "description": "Copies a blob from a source to the given destination using `x-ms-copy-source`.",
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "devstoreaccount1"
          },
          {
            "name": "container",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "lnce-plm-tst"
          },
          {
            "name": "blob",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "archive/PRE000625_items_20250905_XYZ_matching_BOD.txt"
          },
          {
            "name": "x-ms-date",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Mon, 29 Sep 2025 12:48:28 GMT"
          },
          {
            "name": "x-ms-version",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "2020-10-02"
          },
          {
            "name": "x-ms-copy-source",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "http://127.0.0.1:10000/devstoreaccount1/lnce-plm-tst/PRE000625_items_20250905_XYZ_matching_BOD.txt"
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "SharedKey devstoreaccount1:..."
          }
        ],
        "responses": {
          "202": {
            "description": "Copy operation accepted"
          }
        }
      }
    }
  }
}